<p id="notice"><%= notice %></p>

<h1>Listing Apartments</h1>

<table>
  <thead>
    <tr>
      <th>Address 1</th>
      <th>Address 2</th>
      <th>City</th>
      <th>Zip</th>
      <th>State</th>
      <th>Country</th>
      <th>Name</th>
      <th>Phone</th>
      <th>Contact hrs from</th>
      <th>Contact hrs to</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @apartments.each do |apartment| %>
    <% if @ability.can? :read, apartment %>
      <tr>
        <td><%= apartment.address_1 %></td>
        <td><%= apartment.address_2 %></td>
        <td><%= apartment.city %></td>
        <td><%= apartment.zip %></td>
        <td><%= apartment.state %></td>
        <td><%= apartment.country %></td>
        <td><%= apartment.name %></td>
        <td><%= apartment.phone %></td>
        <td><%= apartment.contact_hrs_from %></td>
        <td><%= apartment.contact_hrs_to %></td>
        <td><%= apartment.latitude %></td>
        <td><%= apartment.longitude %></td>
        <td><%= link_to 'Show', apartment %></td>
        <% if @ability.can? :manage, apartment %>
          <td><%= link_to 'Edit', edit_apartment_path(apartment) %></td>
          <td><%= link_to 'Destroy', apartment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>

<br>

<% if @ability.can? :manage, Apartment %>
  <%= link_to 'New Apartment', new_apartment_path %>
<% end %>
<div id="apartment_maps"> google maps will be placed here </div>
